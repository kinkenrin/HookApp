<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_openMain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openMain2"
        android:text="启动Main2Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openMain3"
        android:text="启动Main3Activity"
        app:layout_constraintLeft_toLeftOf="@id/bt_openMain2"
        app:layout_constraintRight_toRightOf="@+id/bt_openMain2"
        app:layout_constraintTop_toBottomOf="@+id/bt_openMain2" />

</android.support.constraint.ConstraintLayout>